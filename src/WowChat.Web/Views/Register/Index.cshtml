
@{
	ViewBag.Title = "注册 - WowChat";
	Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@section head{
	<link href="~/css/register.css" rel="stylesheet" />
}
<div class="title-line">
	<span class="tit">注册</span>
</div>
<div class="register-box">
	<form id="registerForm" method="post" onsubmit="return false;" class="report-wrap-module">
		<div class="form-group">
			<div class="el-input"><input class="el-input-inner" type="text" placeholder="昵称" /></div>
			<p class="error-message">请告诉我你的昵称吧</p>
		</div>
		<div class="register-hidden-group"></div>
		<div class="form-group">
			<div class="el-input"><input class="el-input-inner" type="password" placeholder="密码（6-16个字符组成，区分大小写）" /></div>
			<p class="error-message">密码不能小于6个字符</p>
		</div>
		<div class="register-hidden-group"></div>
		<div class="form-group">
			<div class="el-input"><input class="el-input-inner" type="text" placeholder="填写常用邮箱" /></div>
			<p class="error-message">亲，请填写邮箱号/邮箱已经被注册</p>
		</div>
		<div class="register-hidden-group text-right">
			<a href="#">用手机注册&gt;</a>
		</div>
		<div class="form-group yzm">
			<div class="code-input el-input"><input class="el-input-inner" type="text" placeholder="请输入邮件验证码" /></div>
			<button type="button" class="el-button yzm-button el-button-primary"><span>获取验证码</span></button>
			<p class="error-message">验证码已发送，5分钟内有效</p>
		</div>
		<div class="register-hidden-group"></div>
		<div class="form-group">
			<button id="js-btn-reg" class="el-button el-button-full el-button-primary"><span>注册</span></button>
		</div>
		<div class="register-hidden-group text-right">
			<a href="/login">已有账号，直接登录&gt;</a>
		</div>
	</form>
</div>
@section foot{
	<script src="~/js/register.js"></script>
}